---
layout: layouts/base.njk
---

{# Only include the syntax highlighter CSS on blog posts #} {%- css %}{% include
"node_modules/prismjs/themes/prism.css" %}{% endcss %}
<div class="post">
	<h1>{{ title }}</h1>

	<ul class="post-metadata">
		<li>
			<span class="reading-time-stat"
				>{{ content | readingTime }} read</span
			>
			<time datetime="{{ page.date | htmlDateString }}">{{
				page.date | readableDate
			}}</time>
		</li>
		{%- for tag in tags | filterTagList %} {%- set tagUrl %}/tags/{{
			tag | slugify
		}}/{% endset %}
		<li>
			<a href="{{ tagUrl }}" class="post-tag">#{{ tag }}</a>
		</li>
		{%- endfor %}
	</ul>

	{{ content | safe }}

	{# {%- if collections.posts %} {%- set previousPost = collections.posts |
	getPreviousCollectionItem %} {%- set nextPost = collections.posts |
	getNextCollectionItem %} {%- if nextPost or previousPost %}

	<ul class="links-nextprev">
		{%- if previousPost %}
		<li>
			Previous:
			<a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
		</li>
		{% endif %} {%- if nextPost %}
		<li>
			Next: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
		</li>
		{% endif %}
	</ul>
	{%- endif %} {%- endif %} #}
</div>

<h2>Comments</h2>

<script
	src="https://utteranc.es/client.js"
	repo="sanjeevsubedi/sanzeev.com.np"
	issue-term="title"
	theme="boxy-light"
	crossorigin="anonymous"
	async
></script>

<script src="/js/code-copy.js"></script>
